<h2>Log in</h2>
<div class="row">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col-md-4 col-md-offset-4" }) do |f| %>
    <%= f.input :email, input_html: { placeholder: "Enter email" }, required: false, autofocus: true %>
    <%= f.input :password, input_html: { placeholder: "Enter password" }, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%= f.button :submit, "Log in", class: "btn btn-primary col-md-4 col-md-offset-4" %>
  <% end %>
</div>
<div class="row">
  <%= render "devise/shared/links" %>
</div>