<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, input_html: { placeholder: 'Enter first name' } %>
    <%= f.input :last_name, input_html: { placeholder: 'Enter last name' } %>
    <%= f.input :email, input_html: { placeholder: 'Enter email' }, required: true, autofocus: true %>
    <%= f.input :password, input_html: { placeholder: 'Enter password' }, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, input_html: { placeholder: 'Confirm password' }, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
