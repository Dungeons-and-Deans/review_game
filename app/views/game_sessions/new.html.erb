<%= simple_form_for @game_session, url: 'create' do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.association :game, label_method: :name %>

  <%= f.simple_fields_for :category_game_session_assignments do |ff| %>
    <%= ff.association :category, label_method: :name, as: :check_boxes %>
  <% end %>

  Number of Groups <%= number_field_tag :number_of_groups %>

  <%= f.button :submit %>
<% end %>
