<h1><%= @game_session.game.name %> <%= @game_session.id %></h1>

<%= simple_form_for @game_session, url: "assign_groups", html: { class: "col-md-8 col-md-offset-2" } do |f| %>
  <%= f.error_notification %>
  <%= render partial: 'new_group_form', locals: {f: f} %>
  <%= f.button :submit, "Submit", class: "btn btn-primary col-md-4 col-md-offset-4" %>
<% end %>

<ul class="groups-students student-list">
  <% @students.each do |student| %>
    <li class="draggables" id="<%= student.id %>"><%= student.full_name %></li>
  <% end %>
</ul>
