<%= simple_form_for @category, remote: true do |f| %>
  <%= f.error_notification %>
  <div id="question-list" class="col-md-6 col-md-offset-3">
    <div class="row">
      <%= link_to 'Add <i class="fa fa-plus"></i>'.html_safe, "#", id: "copy_link", class: "btn btn-default col-md-4 col-md-offset-4", onclick: "copySection();" %>
    </div>
    <div>
      <div id="new-question-form">
        <%= render partial: '/questions/form', locals: { f: f } %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= f.button :submit, "Submit Questions", class: "col-md-4 col-md-offset-4" %>
  </div>
<% end %>
