<h3><%= @category.name %></h3>

<ul class="list">
  <% @questions.each do |question| %>
    <li><div id="question-container<%= question.id %>"><%= render partial: 'question', locals: {question: question} %></li>
  <% end %>
</ul>

<div class="links">
  <%= link_to 'Edit/Add Question', edit_category_path(@category), html_options = { class: "btn btn-default" } %>
  <%= link_to 'New Game Scenario', new_game_path, html_options = { class: "btn btn-default" } %>
</div>
