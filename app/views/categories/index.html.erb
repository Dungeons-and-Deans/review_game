<div class="mdl-cell mdl-cell--12-col center">
  <h3>Available Categories</h3>
</div>

<div class="mdl-cell mdl-cell--4-col"></div>

<table class="mdl-cell mdl-cell--4-col mdl-data-table mdl-js-data-table mdl-shadow--4dp">
  <thead>
    <tr>
      <th colspan="2"><%= link_to 'Add Category <i class="fa fa-plus"></i>'.html_safe, new_category_path %></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr id="category<%= category.id %>">
        <td class="mdl-data-table__cell--non-numeric"><%= link_to "#{category.name}", category %></td>
        <td><%= link_to '<i class="fa fa-times"></i>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="mdl-cell mdl-cell--4-col"></div>
