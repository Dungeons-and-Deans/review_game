<h1>Available Categories</h1>

<table>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to "#{category.name}", category %></td>
        <td><%= link_to 'x', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Category', new_category_path %>
