<div class="mdl-card mdl-shadow--4dp">
  <div class="mdl-card__title">
    <h3>Players</h3>
  </div>

  <table class="mdl-data-table mdl-js-data-table mdl-cell mdl-cell--6-col">

    <thead>
      <tr>
        <% @game_session.groups.each do |group| %>
        <th><%= group.name %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <tr>
        <% @game_session.groups.each do |group| %>
          <td>
            <ul>
              <% @game_session.students.order(:last_name).each do |student| %>
                <li>
                  <%= student.full_name %>
                  <%= link_to student.active?.html_safe, active_path(@game_session, student), remote: true %>
                </li>
              <% end %>
            </ul>
          </td>
        <% end %>
      </tr>
    </tbody>

  </table>
</div>
