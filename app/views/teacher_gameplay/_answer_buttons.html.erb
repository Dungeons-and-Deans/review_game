<div id="answerButtonsModal" class="modal">
  <div class="modal-fg">
    <button type="button" id="close-answer-buttons" class="close-modal button-margin"><i class="fa fa-times"></i></button>

    <div id="correct">
      <%= simple_form_for @question, url: next_question_path(@game_session, @question, @current_group.id), remote: true do |f| %>
        <%= f.hidden_field :right, value: f.object.right + 1%>
        <%= f.button :submit, "Correct", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect", id: "button-correct" %>
      <% end %>
    </div>

    <div id="incorrect">
      <%= simple_form_for @question, url: next_question_path(@game_session, @question, @current_group.id), remote: true do |f| %>
        <%= f.hidden_field :wrong, value: f.object.wrong + 1 %>
        <%= f.button :submit, "Incorrect", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect", id: "button-incorrect" %>
      <% end %>
    </div>
  </div>
</div>
