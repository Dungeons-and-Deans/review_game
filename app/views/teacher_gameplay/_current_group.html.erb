<div class="mdl-card__title">
  <h3 class="mdl-card__title-text">Current Group</h3>
</div>
<div class="mdl-card__supporting-text">
  <div class="current-group" id="<%= @current_group.id %>">
    <%= @current_group.name if @current_group %>
  </div>
  <div class="supplies">
    <h5>Supplies</h5>
    <ul>
      <% if @current_group %>
        <% @current_group.supplies.each do |s| %>
        <li><%= s.amount %> <%= s.name %></li>
        <% end %>
        <li><%= render partial: 'supply', locals: { id: @current_group.id } %></li>
    </ul>
  </div>
<% end %>
</div>
