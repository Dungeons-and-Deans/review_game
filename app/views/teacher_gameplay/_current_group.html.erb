
<div class="current-group" id="<%= @current_group.id %>">
  <h3><%= @current_group.name %></h3>
</div>

<div class="supplies">
  <h5>Supplies</h5>
  <ul>
    <% if @current_group.supplies.length == 0 %>
      <li>
        No Supplies Added
      </li>
    <% else %>
      <% @current_group.supplies.each do |s| %>
        <li><div id="s<%= s.id %>"><%= render partial: '/supplies/show', locals: { s: s } %></div></li>
      <% end %>
    <% end %>
    <li>
      <div class="modal" id="suppliesModal">
        <div class="modal-fg mdl-cell--3-col">
          <h2>
            <%= render partial: '/supplies/form', locals: { id: @current_group.id, supply: Supply.new } %>
          </h2>
          <button class="close-modal mdl-button mdl-js-button mdl-button--raised mdl-button--colored">Close</button>
        </div>
      </div>
    </li>
  </ul>
</div>

<div id="notes<%= @current_group.id %>">
  <%= render partial: '/notes/index', locals: { group: @current_group } %>
</div>


<div id="send-message-container">
  <%= render partial: '/teacher_gameplay/send_message', locals: { group: @current_group } %>
</div>
