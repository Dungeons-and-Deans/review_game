<h3>Current Group</h3>

<div class="current-group" id="<%= @current_group.id %>">
  <h4><%= @current_group.name if @current_group %></h4>
</div>

<div class="supplies">
  <% if @current_group %>
    <h5>Supplies</h5>
    <ul>
      <% if  @current_group.supplies.length == 0 %>
        <li>
          No Supplies Added
        </li>
      <% else %>
        <% @current_group.supplies.each do |s| %>
          <li><div id="s<%= s.id %>"><%= render partial: '/supplies/show', locals: { s: s } %></div></li>
        <% end %>
      <% end %>
          <li>
            <div class="mdl-card mdl-shadow--4dp modal" id="suppliesModal">
              <div class="mdl-card__supporting-text">
                <h2>
                  <%= render partial: '/supplies/form', locals: { id: @current_group.id, supply: Supply.new } %>
                </h2>
              </div>
            </div>
          </li>

      </ul>
  <% end %>
</div>

<div id="notes<%= @current_group.id %>">
  <%= render partial: '/notes/index', locals: { group: @current_group } %>
</div>
