<div class="mdl-grid mdl-cell mdl-cell--12-col mdl-shadow--4dp topcard">
  <div id="game-header">
    <h3><%= @game_session.name %></h3>
  </div>
  <div class="link">
    <h6><%= link_to "Projector View", class_gameplay_path(@game_session), class: "mdl-button mdl-js-button mdl-button--accent button" %></h6>
  </div>
</div>

<div class="mdl-cell mdl-cell--3-col mdl-shadow--4dp card">
  <div class="bookmark">
    <i class="fa fa-bookmark"></i> denotes the current group that will be sent the next question
  </div>
  <div id="group-links">
    <%= render partial: 'group_links' %>
  </div>
</div>
<div class="mdl-cell mdl-cell--4-col mdl-shadow--4dp card">
  <button id="send-message" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
    Send Message
  </button>
  <div id="current-group">
    <%= render partial: 'current_group' %>
  </div>
  <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect" id="addNotes">Add Note</button>
</div>

<div class="mdl-cell mdl-cell--5-col mdl-shadow--4dp card">
  <div id="next-question">
    <%= render partial: 'next_question' %>
  </div>
  <div>
    <button id="send-question" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
      Send Question
    </button>
  </div>
  <div>
    <ul
      id="list-competition-answers">
    </ul>
  </div>
  <div id="roster">
    <%= render partial: 'roster' %>
  </div>
</div>

<%= render partial: 'winner' %>
<div id="next-turn">
  <%= render partial: '/teacher_gameplay/next_turn' %>
</div>



<div id="answer-buttons">
  <%= render partial: 'answer_buttons' %>
</div>
