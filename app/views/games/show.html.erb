<div class="col-md-4 col-md-offset-4"
  <p>
    <strong>Name:</strong>
    <%= @game.name %>
  </p>
  
  <p>
    <strong>Student icon:</strong>
    <i class="<%= @game.icon.description %> fa-2x"></i>
  </p>
  
  <p>
    <strong>Movement:</strong>
    <%= @game.movement %>
  </p>

  <%= link_to 'Edit', edit_game_path(@game), html_options = { class: "btn btn-default" } %>
  <%= link_to 'New Game Scenario', new_game_path, html_options = { class: "btn btn-default" } %>
</div>
