<%= simple_form_for @game do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :student_icon,
              :as => :select,
              :collection => [['Ship','fa fa-ship'],['Bus','fa fa-bus'],['Taxi','fa fa-taxi']] %>
  <%= f.input :movement %>
  
  <%= f.hidden_field :teacher_id %>

  <%= f.button :submit %>

<% end %>
