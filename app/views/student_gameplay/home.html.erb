<img class="map" src="<%= @map.file_path %>">

<% @players.each do |player| %>
  <i class="<%= @icon.description %> <%= player.group_id %> draggables", id="<%= player.id %>"><%= player.student.first_name[0] %></i>
<% end %>

<div>
  <%= params[:group_id] %>
  <p><%= @group.name %></p>
  <p><%= @group.score %> points</p>

  <ul><h5>Supplies</h5>
    <% @group.supplies.each do |supply|%>
      <li><%= supply.amount %> <%= supply.name %></li>
    <% end %>
  </ul>


  <ol><h5>Group Members</h5>
    <% @group.students.order(:last_name).each do |student| %>
      <li>
        <%= student.full_name %>
        <% if student.active %>
          <i class="fa fa-star"></i>
        <% else %>
          <i class="fa fa-frown-o"></i>
        <% end %>
      </li>
    <% end %>
  </ol>
</div>

<%= render partial: 'question', locals: {question: @question} %>

<%= link_to "Logout", student_gameplay_logout_path, html_options = { class: "btn btn-default" } %>
