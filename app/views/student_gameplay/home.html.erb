<img class="map" src="<%= @map.file_path %>">

<% @players.each do |player| %>
  <i class="<%= @icon.description %> <%= player.group_id %> draggables", id="<%= player.id %>"><%= player.student.first_name[0] %></i>
<% end %>

<div class="group-view-info">
  <%= link_to "Logout", student_gameplay_logout_path, html_options = { class: "btn btn-danger" } %>
  <h3>Group: <%= params[:group_id] %></h3>
  <p>Name: <%= @group.name %></p>
  <p>Score: <%= @group.score %> points</p>

  <ul class="list-group"><h5>Supplies</h5>
    <% @group.supplies.each do |supply|%>
      <li class="list-group-item"><%= supply.amount %> <%= supply.name %></li>
    <% end %>
  </ul>


  <h5>Group Members</h5>
  <ul class="list-group">
    <% @group.students.order(:last_name).each do |student| %>
      <li class="list-group-item">
        <%= student.full_name %>
        <% if student.active %>
          <i class="fa fa-star"></i>
        <% else %>
          <i class="fa fa-frown-o"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<%= render partial: 'question', locals: {question: @question} %>
