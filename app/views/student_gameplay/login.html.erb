<div class='row'>
  <div class='col-md-4'></div>
  <div class='col-md-4'>
    <h1>Group Login</h1>
    <p>Login to play.</p>

    <%= form_tag do %>
      <div class='row'>
        <div class='col-md-2'>
          <%= label_tag :password %>
        </div>
        <div class=col-md-10>
          <%= text_field_tag :password %><br>
        </div>
      </div>

  </div>
  <div class='row'>
    <div class='col-md-8'><br>
      <div class='span7 text-center'>
        <%= submit_tag 'Login', class: "btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
