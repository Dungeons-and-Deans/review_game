<!DOCTYPE html>
<html>
  
  <head>
    <title>ReviewGame</title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  
  <body>
    
    <ul class="nav nav-tabs">
      <li role="presentation" class="home"><%= link_to 'Home', root_path %></li>
      <li role="presentation" class="roster"><%= link_to 'Roster', students_path %></li>
      <li role="presentation" class="categories"><%= link_to 'Questions', categories_path %></li>
      <% if teacher_signed_in? %>
        <%= link_to('Logout', destroy_teacher_session_path, :method => :delete, class: 'logout') %>
      <% end %>
    </ul>
  
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  
  <%= yield %>
  
  </body>
  
</html>
