<h3>Students</h3>

<table class="students-table">
  <thead>
    <tr>
      <th>Games won</th>
      <th>Name</th>
      <th colspan="2"><%= link_to 'Add <i class="fa fa-plus"></i>'.html_safe, new_student_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.games_won %></td>
        <td><%= link_to "#{student.first_name} #{student.last_name}", student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to '<i class="fa fa-user-times"></i>'.html_safe, student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
