<div id="new-question-form" class="mdl-grid mdl-cell mdl-cell--12-col">
  <%= f.simple_fields_for :questions, @category.questions.build, remote: true do |ff| %>

    <%= ff.input :content, label: false, wrapper_html: { class: "mdl-cell mdl-cell--4-col" }, input_html: { placeholder: "Enter Question Here" } %>
    <%= ff.input :answer, label: false, wrapper_html: { class: "mdl-cell mdl-cell--4-col" }, input_html: { placeholder: "Enter Answer Here" } %>
    <div class="mdl-cell mdl-cell--4-col slider">
      <div class="slider-title">Question Difficulty Level</div>
      <input class="mdl-slider mdl-js-slider" type="range" min="1" max="10" value="0" tabindex="0" name="category[questions_attributes][0][difficulty_level]" id="category_questions_attributes_0_difficulty_level"/>
    </div>
    <%= ff.hidden_field :right, value: 0 %>
    <%= ff.hidden_field :wrong, value: 0 %>

  <% end %>
</div>
