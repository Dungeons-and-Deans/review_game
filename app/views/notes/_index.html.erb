<% if @current_group %>
  <h5>Notes</h5>
  <ul>
    <% @current_group.notes.each do |n| %>
      <li>
        <%= n.content %>
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_note_path(n), remote: true %>
        <%= link_to '<i class="fa fa-times"></i>'.html_safe, n, method: :delete, remote: true %>
      </li>
    <% end %>
    <li>
      <div class="mdl-card mdl-shadow--4dp" id="notesModal">
        <div class="mdl-card__supporting-text">
          <h2>
            <%= render partial: '/notes/form', locals: { id: @current_group.id, note: Note.new } %>
          </h2>
        </div>
      </div>
    </li>
  </ul>
<% end %>
